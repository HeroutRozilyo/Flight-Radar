<Window x:Class="PFlight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     
        xmlns:local="clr-namespace:PFlight"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid Margin="0,0,0.333,-1.333">
        <Label Content="in" HorizontalAlignment="Left" Height="42" Margin="183,32,0,0" VerticalAlignment="Top" Width="152"/>
        <ListBox x:Name="inList" HorizontalAlignment="Left" Height="143" Margin="205,82,0,0" VerticalAlignment="Top" Width="130" ItemsSource="{Binding FlightsIN}" DisplayMemberPath="Source" MouseDoubleClick="inList_MouseDoubleClick" />
        <Label Content="out" HorizontalAlignment="Left" Height="42" Margin="26,35,0,0" VerticalAlignment="Top" Width="152"/>
        <ListBox x:Name="outList" HorizontalAlignment="Left" Height="143" Margin="0,82,0,0" VerticalAlignment="Top" Width="130" ItemsSource="{Binding FlightsOut}" DisplayMemberPath="Destination" MouseDoubleClick="outList_MouseDoubleClick"/>

        <StackPanel x:Name="detailsP" HorizontalAlignment="Left" Height="126" Margin="107,257,0,0" VerticalAlignment="Top" Width="706">
            <TextBlock Text="{Binding SourceId}"></TextBlock>
            <TextBlock Text="{Binding Source}"></TextBlock>
            <TextBlock Text="{Binding Destination}"></TextBlock>
            <TextBlock Text="{Binding FlightCode}"></TextBlock>
            <TextBlock Text="{Binding Lat}"></TextBlock>
            <TextBlock Text="{Binding Long}"></TextBlock>
        </StackPanel>
        <StackPanel x:Name="detailsPName" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Height="126" Margin="31,257,0,0" VerticalAlignment="Top" Width="71">
            <TextBlock Text="Source Id:"></TextBlock>
            <TextBlock Text="Source:"></TextBlock>
            <TextBlock Text="Destination:"></TextBlock>
            <TextBlock Text="FlightCode:"></TextBlock>
            <TextBlock Text="Lat:"></TextBlock>
            <TextBlock Text="Long:"></TextBlock>
        </StackPanel>


    </Grid>
</Window>
